<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lab.imaginenat.com.project2.SearchActivity">

    <!--<FrameLayout-->
        <!--android:id="@+id/recyclerView_FrameLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="300dp">-->



    <!--</FrameLayout>-->
    <ImageView
        android:id="@+id/broadcast_tower_imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/radio_tower"
        android:scaleType = "centerCrop"
        android:alpha="20"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/placesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_below="@id/broadcast_tower_imageView">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placesRecyclerView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:text="Search Options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button
        android:id="@+id/executeSearch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:text="PERFORM SEARCH"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
